<% provide(:title, @user.name) %>

<div class="container">
    <div class="col-md-4">
        <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
        </h1>
        <p class="text-info">
            <%= @user.password %>
        </p>
    </div>

    <div class="col-md-8">
        <% if @user.microposts.any? %>
        <%= will_paginate @microposts %>
        <h3>Microposts ( <%=  @user.microposts.count %> )</h3>
        <ol class="microposts">
            <%= render(@microposts) %>
        </ol>
        <%= will_paginate @microposts %>
        <% end %>
    </div>
</div>

