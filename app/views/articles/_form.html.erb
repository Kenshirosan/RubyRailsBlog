<%= form_with model: @article, local: true do |form| %>

  <%= render 'errors' %>

  <div class="form-group">
    <%= form.label :title , class:"col-md-4 control-label" %><br>
    <div class="col-md-6">
      <%= form.text_field :title, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :text , class:"col-md-4 control-label" %><br>
    <div class="col-md-6">
      <%= form.text_field :text, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      <%= form.submit class:"btn btn-success" %>
    </div>
  </div>

<% end %>