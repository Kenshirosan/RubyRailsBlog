<header>
    <nav class="navbar navbar-inverse bg-inverse navbar-toggleable-md">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <%= link_to "Blog", '/', class: "navbar-brand"  %>
            </li>
            <li class="nav-item">
                <%= link_to "Read articles", {controller: 'articles'}, class: "nav-link"  %>
            </li>

            <% if logged_in? %>
                <li class="nav-item">
                    <%= link_to "Create an article", new_article_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "Users", {controller: 'users'}, class: "nav-link" %>
                </li>
                <li class="nav-item dropdown float-right">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                      Account <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Profile", current_user %></li>
                        <li><%= link_to "Settings", '#' %></li>
                        <li class="dropdown-divider"></li>
                        <li>
                        <%= link_to "Log out", logout_path, method: :delete %>
                        </li>
                    </ul>
                </li>
            <% end %>

            <% if ! logged_in? %>
                <li class="nav-item">
                    <%= link_to "Register", new_user_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "Login", login_path, class: "nav-link" %>
                </li>
            <% end%>

        </ul>
    </nav>
</header>